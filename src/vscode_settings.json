{
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "editor.fontFamily": "SF Mono, Fira Code, Menlo, Monaco, 'Courier New', monospace",
    "editor.fontSize": 14,

    // Fira Code ligature options (https://github.com/tonsky/FiraCode/wiki/How-to-enable-stylistic-sets):
    // ss02 = horizontal bar on less/greater-than-or-equal
    // ss03 = traditional ampersand
    // ss04 = lightweight dollar sign
    // ss06 = apply ligatures to common regexp match operators, positive and negative
    // zero = dotted zero instead of slashed
    // onum = old-style numerals
    "editor.fontLigatures": "'ss02', 'ss03', 'ss04', 'ss07', 'zero', 'onum'",
    "workbench.startupEditor": "none",
    "files.associations": {
        "*.log": "log"
    },
    "[log]": {
        "editor.fontFamily": "Iosevka SS05",
        "editor.fontWeight": "400"
    },
    "editor.renderWhitespace": "all",
    "editor.multiCursorModifier": "alt",
    "editor.suggestSelection": "first",
    "window.nativeFullScreen": false,
    "window.newWindowDimensions": "maximized",
    "editor.fontWeight": "100",
    "markdown-preview-enhanced.breakOnSingleNewLine": false,
    "markdown.preview.fontSize": 16,
    "markdown.styles": [
        "styles/Markdown-preview.css"
    ],
    "terminal.integrated.fontSize": 14,
    "vim.camelCaseMotion.enable": true,
    "vim.cursorStylePerMode.replace": "block-outline",
    "vim.cursorStylePerMode.visual": "block-outline",
    "vim.cursorStylePerMode.visualblock": "block-outline",
    "vim.cursorStylePerMode.visualline": "block-outline",
    "vim.hlsearch": true,
    "editor.cursorBlinking": "phase",
    "editor.tabSize": 2,
    "vim.replaceWithRegister": true,
    "editor.parameterHints.enabled": false,
    "workbench.tree.indent": 20,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.autoClosingBrackets": "never",
    "vim.showMarksInGutter": true,

    "todo-tree.highlights.defaultHighlight": {
        "foreground": "#000",
        "background": "#ff0",
        "fontWeight": "bold",
        "borderRadius": "2px",
        "gutterIcon": true,
        "iconColour": "#ff0",
    },
    "todo-tree.highlights.customHighlight": {
        "TODO": {
            "background": "#0f0",
            "iconColour": "#8f0"
        }
    },
    "todo-tree.tree.tooltipFormat": "${tag} ${afterOrBefore}",
    "gitlens.currentLine.enabled": false,
    "gitlens.currentLine.pullRequests.enabled": false,
    "editor.unicodeHighlight.nonBasicASCII": false,
    "terminal.integrated.copyOnSelection": true,
    "terminal.integrated.macOptionIsMeta": true
}